html
  head
    title
      = htmlWebpackPlugin.options.title

    base(href='/')
    meta(http-equiv='Content-type' content='text/html; charset=utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')

    link(rel='icon' href=htmlWebpackPlugin.options.favicon)

    for file in htmlWebpackPlugin.files.css
      link(rel='stylesheet' href=file async)

  body
    app
     h1 Loading Application

    for file in htmlWebpackPlugin.files.js
      - if (/styles/.test(file))
        - if (!htmlWebpackPlugin.files.css.length)
          script(src=file defer)
      - else if (/common/.test(file))
        script(src=file defer)
      - else
        script(src=file defer)
